<div class = "new">
<h1>Login</h1>

<% if flash[:error] %>
  <div style="color: red">
    <%= flash[:error] %>
  </div>
<% end %>


<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :loginname, style: "display: block" %>
    <%= form.text_field :loginname, class: 'c-form-text-2' %>
  </div><br>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, class: 'c-form-text-2' %>
  </div><br><br>

  <div>
    <%= form.submit "Login", class: "btn_02" %>
    <br>
    <%= link_to ">ã€€Create New User", new_user_path %>
	

  </div>
<% end %>

</div>
